<%@ include file="/html/portlet/css_init.jsp" %>

.portlet-group-stats {
	.group-stats-header {
		background-color: #202020;
		font-size: 1.1em;
		font-weight: bold;
		height: 26px;
		position: relative;
	}

	.group-stats-title {
		color: orange;
		float: none;
		margin: 0;
		min-width: 50%;
		padding: 5px;
	}

	.group-stats-body {
		border-collapse: collapse;
		border-spacing: 0;
		clear: both;
		display: table;
		table-layout: auto;
		width: 100%;
	}

	.group-stats-chart {
		width: 100%;
	}

	.group-stats-info {
		padding: 10px 0 10px 10px;

		table {
			margin-left: 10px;
		}

		td {
			padding: 0px 3px;
		}
	}

	.group-stats-color-marker {
		height: 8px;
		margin-right: 4px;
		width: 8px;
	}

	.aui-field-row .inline-text {
		margin: 1px 3px 0px 0px;
		padding: 1px;
	}
}